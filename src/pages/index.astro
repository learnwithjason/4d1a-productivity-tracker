---
import Layout from '../layout/default.astro';
import { getAuth } from '../astro-clerk';

const auth = await getAuth(
	{ client: Astro },
	{
		loadUser: true,
	},
);

if (auth instanceof Response) {
	return auth;
}

if (auth.userId) {
	Astro.redirect('/track');
}
